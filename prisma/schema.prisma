// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password  String
  fullname String
  files File[]
}
model File{
  id    Int     @id @default(autoincrement())
  filename String
  originalName String
  size Int
  mimetype String
  user User @relation(fields: [userId],references: [id])
  userId Int
}